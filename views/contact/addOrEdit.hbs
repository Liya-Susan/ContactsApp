<h3>{{viewTitle}}</h3>
<br/>
<form action="/contact" method="post" autocomplete="off">
<input type="hidden" name='_id'value="{{contact._id}}">
    <div class="form-group">
        <label>Full Name</label>
        <input type="text" class="form-control" name="fullname" placeholder="Full Name" value="{{contact.fullname}}">
        <div class="text-danger">{{contact.fullNameError}}</div>
    </div>
    <br/>
    <div class="form-group">
        <label>Email</label>
        <input type="text" class="form-control" name="email" placeholder="Email" value="{{contact.email}}">
        <div class="text-danger">{{contact.emailError}}</div>
    </div>
    
    <br/>
    <div class="row">
        <div class="form-group col-md-6">
            <label>Mobile</label>
            <input type="text" class="form-control" name="mobile" placeholder="Mobile Number" value="{{contact.mobile}}">
        </div>
        <div class="form-group col-md-6">
            <label>City</label>
            <input type="text" class="form-control" name="city" placeholder="City" value="{{contact.city}}">
        </div>
    </div>
    <br/>
    <div class="form-group">
        <button type="submit" class="btn btn-secondary">Add</button>
        <a class="btn btn-secondary" href="/contact/list">View all</a>
    </div>
</form> 